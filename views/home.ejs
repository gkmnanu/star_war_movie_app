<!doctype html>
<html lang="en">
  <head>
      <!-- head include -->
    <% include partials/head.ejs %>
  </head>
  <body>
    <% include partials/header.ejs %>
    <div id="hero-image">
        <h1 id="hero-title"><%= title %></h1>
    </div>
    
    <div id="poster-wrapper" class="content-padding clearfix">
        <% for(var i=0; i< movies.length; i++){ %>
            <div class="poster">
                <a href="/star_wars_movie_number/<%= movies[i].episode_number %>">
                    <img src="/images/<%= movies[i].poster %>" class="img-fluid">
                    <div class="poster-info-overlay">
                        <h3><%= movies[i].title %></h3>
                        <h4>View More <i class="fa fa-arrow-right"></i></h4>
                    </div>
                </a>
            </div>
        <% } %>
    </div>



  

    
    <!-- footer -->
    <% include partials/footer.ejs %>
    
    
    <!-- javascript include -->
    <% include partials/scripts.ejs %>
  </body>
</html>